---
const certifications = [
    {
        title: "Meta Front-End Developer",
        platform: "Coursera",
        date: "Agosto 2023",
        icon: "/metafront.png",
        link: "https://coursera.org/share/f8a2ca2d949589342962a204396bbdbe",
    },
    {
        title: "Meta Full-Stack Engineer",
        platform: "Coursera",
        date: "Julio 2024",
        icon: "/metafull.png",
        link: "https://www.credly.com/badges/2786ae7c-4e6d-41d3-84ed-fe8ee5000918/public_url",
    },
    {
        title: "Meta Back-End Developer",
        platform: "Coursera",
        date: "Junio 2024",
        icon: "/metaback.png",
        link: "https://coursera.org/share/113166d835e2b8881331f8fae5d2838f",
    },
];
---

<section class="certifications-container">
    {
        certifications.map((cert) => (
            <a
                href={cert.link}
                target="_blank"
                rel="noopener noreferrer"
                class="certification-card"
            >
                <div class="certification-image-container">
                    <img src={cert.icon} alt={cert.title} class="cert-icon" />
                </div>
                <div class="certification-content">
                    <h2>{cert.title}</h2>
                    <p>{cert.platform}</p>
                    <p>{cert.date}</p>
                </div>
            </a>
        ))
    }
</section>

<style>
    /* Contenedor principal de certificaciones */
    .certifications-container {
        display: grid;
        gap: 2rem;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        justify-items: center;
    }

    /* Tarjeta de certificación */
    .certification-card {
        background: #787c4e;
        padding: 1.5rem;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 300px;
        height: 450px; /* Fija una altura uniforme para todas las tarjetas */
        transition:
            transform 0.3s ease-out,
            box-shadow 0.3s ease-out;
        text-decoration: none;
        color: inherit;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: space-between; /* Distribuye la imagen y el texto */
    }

    /* Contenedor de la imagen */
    .certification-image-container {
        width: 100%;
        height: 180px; /* Fija una altura uniforme para las imágenes */
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Icono de certificación */
    .cert-icon {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Asegura que la imagen se ajuste sin distorsión */
    }

    /* Contenido de la certificación */
    .certification-content {
        text-align: center;
        margin-top: 1rem;
    }

    /* Efecto hover 3D */
    .certification-card:hover {
        transform: rotateY(15deg) rotateX(5deg) translateY(-10px); /* Rotación 3D y elevación */
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3); /* Sombra más pronunciada */
        z-index: 10;
    }

    /* Estilos del texto */
    h2 {
        font-size: 1.7rem;
        margin: 0.1rem 0;
        color: #fff;
    }

    p {
        color: #eceaea;
    }
</style>
